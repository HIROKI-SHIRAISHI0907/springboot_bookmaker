<div class='container mt-3 mb-5'>
   <h1 class='text-left mb-5'>掲示板一覧</h1>

   <div class="d-flex justify-content-end mb-3">
      <!-- リンク -->
      <%= link_to "新規作成", new_post_path, class: "btn btn-outline-secondary" %>
      <!-- サインイン,サインアウトへ -->
      <%= link_to "サインイン", new_post_path, class: "btn btn-outline-secondary" %>
   </div>

   <div class='coll-md-6 mx-auto mb5'>
      <div class='card mb-4 shadow-sm'>
         <div class="card-body">
            <div class="row g-2 align-items-center">
               <!-- タイトル（テキスト） -->
               <div class="col-md-4">
                  <input type="text" class="form-control" placeholder="タイトル">
               </div>

               <!-- 担当者（プルダウン） -->
               <div class="col-md-3">
                  <select class="form-select">
                     <option selected>担当者を選択</option>
                  </select>
               </div>

               <!-- 閲覧者（プルダウン） -->
               <div class="col-md-3">
                  <select class="form-select">
                     <option selected>閲覧者を選択</option>
                  </select>
               </div>

               <div class="col-md-2 d-grid">
                  <button class="btn btn-primary">検索</button>
               </div>
            </div>
         </div>
      </div>
   </div>

   <table class="table">
      <thead>
         <tr>
            <th scope="col">ID</th>
            <th scope="col">タイトル</th>
            <th scope="col">作成者</th>
            <th scope="col">作成日時</th>
            <th scope="col">更新日時</th>
            <th scope="col"></th>
         </tr>
      </thead>
      <tbody>
         <% @posts.each_with_index do |c, index| %>
            <tr id="comment-<%= c.postid %>">
               <td><%= index + 1 %></td>
               <td><%= c.title %></td>
               <td><%= c.name %></td>
               <td><%= l(c.created_at, format: :short) %></td>
               <td><%= l(c.updated_at, format: :short) %></td>
               <td>
                  <!-- /posts/:postid/detailなので、postidをパラメータとして引き渡す -->
                  <%= link_to "詳細", detail_post_path(postid: c.postid), class: "btn btn-outline-secondary btn-sm" %>
                  <!-- button_toでPOST、postidをパラメータとして引き渡す -->
                  <%= button_to "削除", post_path(postid: c.postid), method: :delete, class: "btn btn-outline-danger btn-sm" %>
               </td>
            </tr>
         <% end %>
      </tbody>
   </table>
</div>